{
  "UseSqlLite": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "BookStoreDbConnection": "Server=.\\;Database=BookStoreDb;Trusted_Connection=True;",
    "BookStoreInMemory": "DataSource=app.db;Cache=Shared"
  },
  "Application": {
    "LoginPath": "/login",
    "AppDomain": "https://kathmandu-book-store.herokuapp.com/",
    "EmailConfirmation": "confirm-email?uid={0}&token={1}",
    "ForgotPassword": "reset-password?uid={0}&token={1}",
    "BookDetails": "book-details/{0}"
  },
  "SMTPConfig": {
    "SenderAddress": "devawsapp@gmail.com",
    "SenderDisplayName": "Book store team",
    "UserName": "devawsapp@gmail.com",
    "Password": "Admin@123",
    "Host": "smtp.gmail.com",
    "Port": 587,
    "EnableSSL": true,
    "UseDefaultCredentials": true,
    "IsBodyHTML": true
  }
}
